<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
  <style>
    * {
      padding: 0;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 32px;
    }

    body {
      background-color: gray;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translateX(-50%) translateY(-50%);
    }

    .container {
      display: flex;
      flex-direction: column;
      background-color: white;
      align-items: center;
      justify-content: center;
      padding: 3vh;
      border-radius: 2vh;
    }

    .container div {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1vh;
    }
  </style>

  <script>
    window.onload = function () {
      var btn = document.getElementsByClassName('btn')[0];
      btn.addEventListener('click', function (event) {
        event.preventDefault();
        var xhr = new XMLHttpRequest();
        xhr.open('PUT', '/<%= nameTable %>/change/' + this.id);

        var data = {};

        var inputs = document.querySelectorAll('input');
        inputs.forEach(function (input) {
          data[input.id] = input.value;
        });

        data.Id = this.id;

        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify(data));

        console.log(data);

        xhr.onload = function () {
          if (xhr.status === 200) {
            alert('Запись успешно обновлена');
            location.href = `/<%= nameTable %>/`;
          } else {
            alert('Ошибка при обновлении записи');
          }
        };
      });
    }
  </script>
</head>

<body>
  <div class="container">
    <h1>Изменение новой записи в <%- nameTable %></h1>
    <div>
      <% inputs.forEach(function(input) { %>
        <div>
          <label for="<%= input.id %>"><%- input.text %></label>
          <input id="<%= input.id %>" name="<%= input.id %>" type="text" />
        </div>
        <% }); %>
          <div>
            <button type="button" class="btn" id="<%= id %>">Изменить</button>
          </div>
    </div>
  </div>
</body>

</html>